<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"

                android:src="@drawable/volume_click_iimg" />
            <View

                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#0E0707" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Ses ( + ) Ve Ses ( - ) \nTuşlarını Kontrol edin"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="italic" />
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#0E0707" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textVolumeUp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:text="Ses ( + ) Tuşuna Basın"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textVolumeUpSuccses"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#58A058"
                    android:padding="8dp"
                    android:gravity="center"
                    android:text=""
                    android:visibility="gone"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtVolumeDown"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FEFFFE"
                    android:padding="8dp"
                    android:text="Ses ( - ) Tuşuna Basın"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvVolumeDownResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#58A058"
                    android:padding="8dp"
                    android:text=""
                    android:visibility="gone"
                    android:textColor="#FFFFFF"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>







</RelativeLayout>
